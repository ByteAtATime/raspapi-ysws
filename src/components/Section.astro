---
interface Props {
    command: string;
    output: Record<string, any>;
}

const { 
    command, 
    output 
} = Astro.props;
---

<div class="bg-gray-900 text-green-400 p-4 rounded-lg mb-4 border-2 border-green-800">
    <div class="flex items-center space-x-2">
        <span class="text-green-500">âžœ</span>
        <span class="text-sm uppercase tracking-wider">System Request</span>
    </div>
    
    <div class="bg-black p-3 rounded mt-2">
        <div class="text-green-200">
            <span class="text-red-400">$</span> {command}
        </div>
        <pre set:html={JSON.stringify(output, null, 2)} class="mt-2 text-green-300 opacity-80 text-wrap overflow-x-auto"></pre>
    </div>
</div>