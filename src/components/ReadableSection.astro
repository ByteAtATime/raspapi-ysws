---
interface Props {
    title: string;
}

const { 
    title
} = Astro.props;
---

<div class="bg-slate-800 py-4 px-6 rounded-lg mb-4 border-2 border-green-800 prose prose-invert max-w-full">
    <h2 class="font-bold text-2xl">{title}</h2>

    <div class="mt-2">
        <slot />
    </div>
</div>